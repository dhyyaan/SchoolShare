<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.SignUpActivity"
    tools:showIn="@layout/activity_sign_up">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/rippleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true"
             android:layout_margin="@dimen/five_dp"
            android:visibility="gone">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:src="@mipmap/back"
            android:tint="@android:color/white" />
        </com.balysv.materialripple.MaterialRippleLayout>
        <com.think360.schoolshare.surinder.utils.font.CenturyGothicBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_sign_up"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_dp"
        android:layout_gravity="center"
        android:gravity="top|center"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewStep1"
                    android:src="@mipmap/step_1"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_toRightOf="@+id/linearLayout2"
                    android:layout_toEndOf="@+id/linearLayout2" />
                <View
                    android:id="@+id/line1"
                    android:layout_width="@dimen/line_fifty_dp"
                    android:layout_height="@dimen/one_dp"
                    android:background="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageViewStep2"
                    android:layout_toEndOf="@+id/imageViewStep2"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <com.think360.schoolshare.surinder.utils.font.CenturyGothicRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_step_1"
                android:textColor="@android:color/white"
                android:layout_alignTop="@+id/textViewStep3"
                android:layout_alignRight="@+id/imageViewStep1"
                android:layout_alignEnd="@+id/imageViewStep1"
                android:layout_marginLeft="@dimen/five_dp"/>
        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewStep2"
                    android:src="@mipmap/step_2"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_toRightOf="@+id/linearLayout2"
                    android:layout_toEndOf="@+id/linearLayout2" />
                <View
                    android:id="@+id/line2"
                    android:layout_width="@dimen/line_fifty_dp"
                    android:layout_height="@dimen/one_dp"
                    android:background="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageViewStep2"
                    android:layout_toEndOf="@+id/imageViewStep2"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <com.think360.schoolshare.surinder.utils.font.CenturyGothicRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_step_2"
                android:textColor="@android:color/white"
                android:layout_alignTop="@+id/textViewStep3"
                android:layout_alignRight="@+id/imageViewStep1"
                android:layout_alignEnd="@+id/imageViewStep1"
                android:layout_marginLeft="@dimen/five_dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageViewStep3"
                    android:src="@mipmap/step_3"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_toRightOf="@+id/linearLayout2"
                    android:layout_toEndOf="@+id/linearLayout2" />
                <View
                    android:id="@+id/line3"
                    android:layout_width="@dimen/line_fifty_dp"
                    android:layout_height="@dimen/one_dp"
                    android:background="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageViewStep2"
                    android:layout_toEndOf="@+id/imageViewStep2"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <com.think360.schoolshare.surinder.utils.font.CenturyGothicRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_step_3"
                android:textColor="@android:color/white"
                android:id="@+id/textViewStep3"
                android:layout_alignTop="@+id/textViewStep3"
                android:layout_alignRight="@+id/imageViewStep1"
                android:layout_alignEnd="@+id/imageViewStep1"
                android:layout_marginLeft="@dimen/five_dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewStep4"
                android:src="@mipmap/step_4"
                android:layout_below="@+id/linearLayout2"
                android:layout_toRightOf="@+id/linearLayout2"
                android:layout_toEndOf="@+id/linearLayout2" />
            <com.think360.schoolshare.surinder.utils.font.CenturyGothicRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_step_4"
                android:textColor="@android:color/white"
                android:layout_alignTop="@+id/textViewStep3"
                android:layout_alignRight="@+id/imageViewStep1"
                android:layout_alignEnd="@+id/imageViewStep1"
                android:layout_marginLeft="@dimen/five_dp" />
        </LinearLayout>
    </LinearLayout>

    <com.think360.schoolshare.surinder.utils.NonSwipeableViewPager
        android:id="@+id/vpPagerRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/one_hundred_thirty_five"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/five_dp"
        >
</com.think360.schoolshare.surinder.utils.NonSwipeableViewPager>

</RelativeLayout>
